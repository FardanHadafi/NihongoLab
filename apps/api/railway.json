{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pnpm --filter @nihongolab/api build",
    "watchPatterns": ["/apps/api/**"]
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 1,
    "startCommand": "pnpm --filter @nihongolab/api start",
    "sleepApplication": false,
    "useLegacyStacker": false,
    "multiRegionConfig": {
      "us-east4-eqdc4a": {
        "numReplicas": 1
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
