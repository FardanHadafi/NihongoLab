{
	"extends": ["@repo/typescript-config/svelte.json", "./.svelte-kit/tsconfig.json"],
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "bundler",
		"paths": {
			// Link to Database Package
			"@nihongolab/db": ["../../packages/db/src/index.ts"],

			// Link to API (For sharing Auth Types)
			"@api/*": ["../api/src/*"]
		}
	},
	"include": [
		"src/**/*",
		"tests/**/*",
		// Allow VS Code to look at these files for type checking
		"../../packages/db/src/**/*",
		"../api/src/lib/auth.ts"
	],
	"exclude": ["node_modules", "build", ".svelte-kit"]
}
